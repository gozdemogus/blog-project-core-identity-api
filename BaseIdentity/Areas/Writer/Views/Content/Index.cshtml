@model List<Blog>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12 mb-4 mb-xl-0">
        <h4 class="font-weight-bold text-dark">Hi, welcome back!</h4>
        <p class="font-weight-normal mb-2 text-muted">@DateTime.Now.ToShortDateString()</p>
    </div>
</div>


<div class="panel panel-default">

    <div class="panel-body">
        <br />
        <br />
        <div class="table-responsive">

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Header</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="success">
                            <td>@item.Id</td>
                            <td>@item.Header</td>
                            <td><a href="/Blog/Content/@item.Id"><button class="btn btn-warning"> View </button></a></td>
                            <td><a href="/Writer/Content/Edit/@item.Id"><button class="btn btn-primary"> Edit </button></a></td>
                            <td><a href="/Writer/Content/Delete/@item.Id"><button class="btn btn-danger"> Delete </button></a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
