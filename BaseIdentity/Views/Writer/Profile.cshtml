@model List<Blog>


<div class="container">
    <div class="jumbotron jumbotron-fluid mb-3 pl-0 pt-0 pb-0 bg-white position-relative">
        <div class="h-100 tofront">
            <div class="row justify-content-between">
                <div class="col-md-6 pt-6 pb-6 pr-6 align-self-center">
                    <div class="d-flex align-items-center">
                        <img class="rounded-circle shadow" src="@ViewBag.userInfo.Image" width="90">
                        <large class="ml-2">
                            @ViewBag.userInfo.Name @ViewBag.userInfo.Surname
                        </large>
                        &nbsp;&nbsp;
                        <a href="@ViewBag.userInfo.Facebook"> <span class="iconbox iconsmall rounded-circle text-primary"><i class="fab fa-facebook-f"></i></span></a>
                        &nbsp;     &nbsp;<a href="@ViewBag.userInfo.Twitter"> <span class="iconbox iconsmall rounded-circle text-info"><i class="fab fa-twitter"></i></span></a>

                    </div>
                </div>
            </div>
            <div class="alert alert-primary shadow-sm" role="alert" style="width: 400px;">
                @ViewBag.userInfo.About
            </div>
        </div>
    </div>
</div>



<div class="container mt-5 mb-5">
    <div class="row">

        <div class="col-md-8">

            <h5 class="font-weight-bold spanborder"><span>Latest</span></h5>
            @foreach (var item in Model)
            {
                if (item != Model[0])
                {
                    <div class="mb-3 d-flex justify-content-between">
                        <div class="pr-3">
                            <h2 class="mb-1 h4 font-weight-bold">
                                <a class="text-dark" href="/Blog/Content/@item.Id">@item.Header</a>
                            </h2>
                            <p>
                                @item.Entry
                            </p>
                            <div class="card-text text-muted small">
                                @item.AppUser.Name in @item.Category.CategoryName
                            </div>
                            <small class="text-muted">Dec 12 · 5 min read</small>
                        </div>
                        <img height="120" src="@item.Image">
                    </div>
                }
            }

        </div>
    </div>
</div>