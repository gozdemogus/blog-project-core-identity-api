@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Role List</h1>

<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Role Name</th>
        <th>Role Delete</th>
        <th>Update</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-warning">Update</a></td>
        </tr>
    }

</table>
<br /><br />
<a href="/Admin/Role/AddRole/" class="btn btn-primary">New Role</a>
<a href="/Admin/Role/UserList/" class="btn btn-secondary">Assign Role</a>