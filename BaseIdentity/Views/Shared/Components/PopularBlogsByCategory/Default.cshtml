@model List<Blog>

<div class="col-md-4 pl-4">
    <h5 class="font-weight-bold spanborder"><span>Popular in This Category</span></h5>
    <ol class="list-featured">
        @foreach (var item in Model)
        {
            <li>
                <span>
                    <h6 class="font-weight-bold">
                        <a href="/Blog/Content/@item.Id" class="text-dark">@item.Header</a>
                    </h6>
                    <p class="text-muted">
                        @item.AppUser.Name in @item.Category.CategoryName
                    </p>
                </span>
            </li>
        }


    </ol>
</div>