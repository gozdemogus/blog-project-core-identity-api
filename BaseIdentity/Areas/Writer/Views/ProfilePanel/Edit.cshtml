@model AppUser

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            Edit Content
        </div>
        <div class="panel-body">
            <form method="post">

                <div class="form-group">
                    <label>Username</label>
                    <input class="form-control" asp-for="UserName" type="text" readonly>
                </div>

                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" asp-for="Name" type="text">
                </div>

                <div class="form-group">
                    <label>Surname</label>
                    <input class="form-control" asp-for="Surname" type="text">
                </div>

                <div class="form-group">
                    <label>About</label>
                    <textarea asp-for="About" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <label>Image</label>
                    <input class="form-control" asp-for="Image" type="text">
                </div>

                <div class="form-group">
                    <label>Linkedin</label>
                    <input class="form-control btn-linkedin" asp-for="Linkedin" type="text">
                </div>

                <div class="form-group">
                    <label>Twitter</label>
                    <input class="form-control" asp-for="Twitter" type="text">
                </div>

                <button class="btn btn-warning">Update</button>

            </form>
        </div>
    </div>
</div>