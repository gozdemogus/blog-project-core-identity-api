@model List<RoleAssignViewModel>


@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Role Assign</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" />
            <label class="form-check-label">@Model[i].Name</label>
        </div>
    }
    <button class="btn btn-dark">Assign</button>

</form>