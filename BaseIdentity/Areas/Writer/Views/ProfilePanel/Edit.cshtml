@model AppUser

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            <i class="fa fa-book"> </i>     Edit Content
        </div>
        <br />
        <div class="panel-body">
            <form enctype="multipart/form-data" method="post">

                <div class="form-group">
                    <label>Username</label>
                    <input class="form-control" asp-for="UserName" type="text" readonly>
                </div>

                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" asp-for="Name" type="text">
                </div>

                <div class="form-group">
                    <label>Surname</label>
                    <input class="form-control" asp-for="Surname" type="text">
                </div>

                <div class="form-group">
                    <label>About</label>
                    <textarea asp-for="About" class="form-control" rows="3"></textarea>
                </div>

              

                <div class="form-group">
                    <div class="form-group">
                        <label>Photo</label>
                        @*<input type="file" asp-for="Image" class="custom-input-file form-control">
                        *@
                        <input class="form-control" asp-for="Image" type="text">

                    </div>
                </div>

                <div class="form-group">
                    <label>Linkedin</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-linkedin"></i></span>
                        </div>
                        <input class="form-control" asp-for="Linkedin" type="text">
                    </div>
                </div>

                <div class="form-group">
                    <label>Twitter</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-twitter"></i></span>
                        </div>
                        <input class="form-control" asp-for="Twitter" type="text">
                    </div>
                </div>


                <button class="btn btn-warning">Update</button>

            </form>
        </div>
    </div>
</div>