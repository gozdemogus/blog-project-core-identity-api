@model EditPasswordViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-4 col-sm-4">
    <div class="panel panel-default">
        <div class="panel-heading">
           Change Password
        </div>
        <div class="panel-body">


            <form method="post">
                <div class="form-group">
                    <label>Password</label>
                    <input class="form-control" asp-for="Password" type="password">
                </div>

                <div class="form-group">
                    <label>New Password</label>
                    <input class="form-control" asp-for="NewPassword" type="password">
                </div>

                <div class="form-group">
                    <label>New Password</label>
                    <input class="form-control" asp-for="ConfirmNewPassword" type="password">
                </div>

                <button class="btn btn-warning">Update</button>

            </form>


        </div>
        <div class="panel-footer">

        </div>
    </div>
</div>