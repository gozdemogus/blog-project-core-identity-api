@model List<Blog>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">

    <div class="panel-heading">
       Content
    </div>

    <div class="panel-body">
        <a href="/Writer/Content/Add"> <button type="button" class="btn btn-md btn-success">New Content</button></a>
        <br />
        <br />
        <div class="table-responsive">

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Header</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="success">
                            <td>@item.Id</td>
                            <td>@item.Header</td>
                            <td><a href="/Blog/Content/@item.Id"><button class="btn btn-warning"> View </button></a></td>
                            <td><a href="/Writer/Content/Edit/@item.Id"><button class="btn btn-primary"> Edit </button></a></td>
                            <td><a href="/Writer/Content/Delete/@item.Id"><button class="btn btn-danger"> Delete </button></a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
